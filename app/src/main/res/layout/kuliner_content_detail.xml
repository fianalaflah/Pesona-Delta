<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.kuliner.KulinerDetailActivity"
    android:background="#FFFFFF"
    tools:showIn="@layout/kuliner_activity_detail">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:background="#FFF9C4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/KulinerPhotoDetail"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="72dp"
                android:layout_marginTop="32dp"
                app:layout_constraintDimensionRatio="H, 1:1"
                app:srcCompat="@drawable/kkupang" />

            <TextView
                android:id="@+id/KulinerNamaDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:padding="6dp"
                android:text="Lontong Kupang"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/KulinerHargaDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:text="Rp.10.000/Porsi"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/KulinerDeskripsiDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="#FFFDE7"
                android:fontFamily="sans-serif-light"
                android:padding="6dp"
                android:text="Lontong kupang adalah makanan khas Sidoarjo, Jawa Timur. Sepiring lontong kupang terdiri dari lontong, kuah petis, kupang, lentho, dan sate kerang. Rasanya gurih menggugah selera.Olahan ini menghasilkan sajian bercita rasa khas. Rasa gurih dari kuah, dan petis yang beraroma membuat udang kaya rasa.Selain itu teksturnya juga beragam. Lontong yang padat berpadu dengan kupang yang kenyal, dan lentho yang renyah."
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="36dp"
                android:background="#FDD835"
                android:text="NARAHUBUNG"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="36dp"
                android:background="#FB8C00"
                android:text="RESEP"
                android:textSize="14sp" />


            <Button
                android:id="@+id/buttonMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="32dp"
                android:background="#7CB342"
                android:text="LOKASI"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>