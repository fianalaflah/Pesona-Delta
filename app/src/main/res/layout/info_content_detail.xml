<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.info.InfoDetailActivity"
    android:background="#FFFFFF"
    tools:showIn="@layout/info_activity_detail">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/InfoPhotoDetail"
                android:layout_width="264dp"
                android:layout_height="282dp"
                android:layout_marginHorizontal="72dp"
                android:layout_marginTop="32dp"
                app:layout_constraintDimensionRatio="H, 1:1" />

            <TextView
                android:id="@+id/InfoNamaDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/border_merah"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="M.Nurfian Triantono"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/InfoIdentitasDetail"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_merah"
                android:text="Identitas"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="12dp"
                android:text="Profile UPN Veteran Jawa Timur:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />


            <Button
                android:id="@+id/buttonCall"
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="6dp"
                android:background="#F8051B"
                android:text="NO.TELEPON"
                android:textSize="14sp" />


            <Button
                android:id="@+id/buttonWeb"
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="6dp"
                android:background="#1ADD22"
                android:text="WEBSITE"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonMap"
                android:layout_width="337dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="32dp"
                android:background="#FF5722"
                android:text="ALAMAT"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>