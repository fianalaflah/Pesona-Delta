<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.citytour.CityTourDetailActivity"
    android:background="#FFFFFF"
    tools:showIn="@layout/citytour_activity_detail">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/CityTourPhotoDetail"
                android:layout_width="264dp"
                android:layout_height="134dp"
                android:layout_marginHorizontal="72dp"
                android:layout_marginTop="32dp"
                app:layout_constraintDimensionRatio="H, 1:1" />

            <TextView
                android:id="@+id/CityTourNamaDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/border_hijau"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="CITY TOUR"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/CityTourRuteDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/border_hijau"
                android:text="Candi-Museum"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/CityTourDeskripsiDetail"
                android:layout_width="match_parent"
                android:layout_height="507dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_hijau"
                android:text="Deskripsi "
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Info Pendaftaran Jelajah Darjo:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />


            <Button
                android:id="@+id/buttonCall"
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="6dp"
                android:background="?attr/colorError"
                android:text="NARAHUBUNG"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonWeb"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="6dp"
                android:background="@android:color/holo_red_dark"
                android:text="WEBSITE"
                android:textSize="14sp" />


            <Button
                android:id="@+id/buttonMap"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="32dp"
                android:background="#FFFF00"
                android:text="LOKASI PENDAFTARAN"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>